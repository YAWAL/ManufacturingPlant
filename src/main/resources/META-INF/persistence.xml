<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="Main" transaction-type="RESOURCE_LOCAL">
        <class>com.manufacturingplant.smes.entity.Department</class>
        <class>com.manufacturingplant.smes.entity.Employee</class>
        <class>com.manufacturingplant.smes.entity.Material</class>
        <class>com.manufacturingplant.smes.entity.NonProductionEquipment</class>
        <class>com.manufacturingplant.smes.entity.ProductionEquipment</class>
        <class>com.manufacturingplant.smes.entity.Tool</class>
        <class>com.manufacturingplant.smes.entity.Users</class>
        <class>com.manufacturingplant.smes.entity.Workshop</class>
        <properties>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/manufacturingplant"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="root"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
